#!/bin/bash

muted=$(pulsemixer --get-mute)

if [[ $muted -eq 0 ]]; then
	volume=$(pulsemixer --get-volume | awk '{print $1}')
	
	if [[ $volume -le 33 ]]; then
		printf "ğŸ”ˆ %d%%" $volume
	elif [[ $volume -le 66 ]]; then
		printf "ğŸ”‰ %d%%" $volume
	else
		printf "ğŸ”Š %d%%" $volume
	fi
else
	echo "ğŸ”‡"
fi


# === System Volume Controls ===
# volume {increase, decrease} by 5%
alt + {i,u}
  ~/.scripts/{inc,dec}_vol

# toggle mute
alt + y
  ~/.scripts/tog_vol

# === Music (MPD) Controls ===
# prev, next track
ctrl + {j,k}
  mpc -q {prev,next}

# play/pause
alt + shift + p
  mpc -q toggle

# mpd volume {increase, decrease} by 5%
alt + {n,m}
  mpc -q volume {-,+}5

# seek backward, forward {5,30} sec
alt + shift + {u,i}
  mpc -q seek {-,+}00:00:05
alt + shift + {n,m}
  mpc -q seek {-,+}00:00:30

# === Launch Programs ===
# Terminal
alt + Return
  alacritty

# Launch Programs {editor, web}
alt + o; {e,w}
  {emacs, firefox-developer-edition}

# Program launcher
alt + d
  dmenu_run

# === Desktop Bindings ===
# Lock
super + shift + l
  i3lock -i ~/.cache/lock

# Shutdown, Reboot, exit WM, reload config
alt + x
  ~/.scripts/prompt "Reboot?" "reboot"
alt + shift + x
  ~/.scripts/prompt "Shutdown?" "shutdown -h now"
alt + shift + e
  ~/.scripts/prompt "Exit i3?" "i3-msg exit"

# reload sxhkd
super + shift + r
  pkill -SIGUSR1 sxhkd

# Sleep


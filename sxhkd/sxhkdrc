# === System Volume Controls ===
# volume {increase, decrease} by 5%
XF86Audio{Raise,Lower}Volume
  ~/.local/bin/{inc,dec}_vol

# toggle mute
XF86AudioMute
  ~/.local/bin/tog_vol

# === Music (MPD) Controls ===
# prev, next track
ctrl + {j,k}
  mpc -q {prev,next}

# play/pause
alt + shift + p
  mpc -q toggle

# mpd volume {increase, decrease} by 5%
#alt + {n,m}
#  mpc -q volume {-,+}5

# seek backward, forward {5,30} sec
#alt + shift + {u,i}
#  mpc -q seek {-,+}00:00:05
#alt + shift + {n,m}
#  mpc -q seek {-,+}00:00:30

# === Launch Programs ===
# Terminal
alt + Return
  ($TERMINAL || xterm)

# Launch Programs {editor, web, private web}
alt + o; {e,w}
  {emacs, firefox-developer-edition} 

# Program launcher
alt + shift + d
  dmenu_run

# === Desktop Bindings ===
# Lock
super + shift + l
  i3lock -i ~/.cache/lock -c 000000

# Shutdown, Reboot, exit WM, reload config
alt + x
  ~/.local/bin/prompt "Reboot?" "reboot"
alt + shift + x
  ~/.local/bin/prompt "Shutdown?" "shutdown -h now"
alt + shift + e
  ~/.local/bin/prompt "Exit?" "killall dwm"

# emoji script
ctrl + alt + e
  ~/.local/bin/dmenuunicode

# reload sxhkd
super + shift + r
  pkill -SIGUSR1 sxhkd

# Screenshot
Print
  ~/.local/bin/screenshot


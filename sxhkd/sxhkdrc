# === Volume Controls ===
# volume up
alt + equal
  ~/.scripts/inc_vol.sh

# volume down
alt + minus
  ~/.scripts/dec_vol.sh

# mute
alt + m
  ~/.scripts/tog_vol.sh

# === Music (MPD) Controls ===
# next, prev track
alt + {n,p}
  mpc -q {next,prev}

# play/pause
alt + shift + p
  mpc -q toggle

# === Launch Programs ===
# Terminal
alt + Return
  alacritty

# Browser
alt + b
  firefox-developer-edition

# Program launcher
alt + d
  dmenu_run

# === Desktop Bindings ===
# Lock
ctrl + shift + l
  i3lock -i ~/.bg

# Shutdown, Reboot
alt + x
  ~/.scripts/prompt.sh "Reboot?" "reboot"
alt + shift + x
  ~/.scripts/prompt.sh "Shutdown?" "shutdown -h now"

# Sleep

